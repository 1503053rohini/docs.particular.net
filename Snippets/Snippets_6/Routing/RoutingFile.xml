<?xml version="1.0" encoding="utf-8" ?>
<root>
  <!-- startcode FileRoutingMSMQ -->
  <endpoints>
    <endpoint name="Sales">
      <!-- Scaled-out endpoint -->
      <instance discriminator="1" Machine="Sales1"/>
      <instance discriminator="2" Machine="Sales2"/>
    </endpoint>
    <endpoint name="Shipping">
      <instance Machine="Shipping"/>
    </endpoint>
    <endpoint name="Customers">
      <instance Machine="Customers"/>
    </endpoint>
  </endpoints>
  <!-- endcode -->
  <!-- startcode FileRoutingBroker -->
  <endpoints>
    <endpoint name="Sales">
      <!-- Scaled-out endpoint -->
      <instance discriminator="1"/>
      <instance discriminator="2"/>
    </endpoint>
    <!-- No need to specify instances for non-scaled-out endpoint -->
    <endpoint name="Shipping" />
    <endpoint name="Customers" />
  </endpoints>
  <!-- endcode -->
</root>